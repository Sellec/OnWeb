@model Design.Model.Message
@{
    Layout = "baseCommon.cshtml";
    Title = "Сообщение";
}

@section breadcrumbs {
    <!-- (breadcrumbs) -->
    <div class="breadcrumbs inner-breadcrumbs">
        <div class="breadcrumbs__cover cover">
            <div class="breadcrumbs__links">
                <a typeof="v:Breadcrumb" href="/" class="breadcrumbs__link">Главная</a>
                <span class="breadcrumbs__arrow"></span>
                <p class="breadcrumbs__last">Сообщение</p>
            </div>
        </div>
    </div>
    <!-- End (breadcrumbs) -->
}

<div class="site-error-page">
    <div class="cover">

        <h1>@(Model == null || string.IsNullOrEmpty(Model.Subject) ? "Сообщение" : Model.Subject)</h1>

        <div style="font-style: italic;font-weight: bold">
            @Html.Nl2Br(Model.Body)
        </div>
    </div>
</div>